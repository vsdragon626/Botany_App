<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New Entry" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Basic Information" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="ID Number"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="ST2-225" >
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Species"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Taraxacum     Officinale" >
        </EditText>
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Date and Time"
            android:textAppearance="?android:attr/textAppearanceMedium" />

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <TextView
		        android:id="@+id/dateTime"
		        android:layout_width="150dp"
		        android:layout_height="35dp"
		        android:gravity="center"
		        android:layout_alignParentLeft="true"
		        android:text="March 4, 2013" />
		    
		    <TextView
		        android:id="@+id/dateTime2"
		        android:layout_width="150dp"
		        android:layout_height="35dp"
		        android:gravity="center"
		        android:layout_alignParentRight="true"
		        android:text="8 : 30 AM" />
		</RelativeLayout>

        <Button
            android:id="@+id/picButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Photos" />
        
        <ImageView 
            android:id="@+id/image_preview"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:src="@drawable/plant1"/>
        
        <Button
            android:id="@+id/locButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Location" />
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Coordinates as calculated by phone's GPS:"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Latitude     Longitude"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    	
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="41.656497     -93.592873"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Notes" />
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Flower Notes"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <MultiAutoCompleteTextView
            android:id="@+id/bigtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="Filler text filler text filler text filler text.  Filler text filler text filler text filler text.  Filler text filler text filler text filler text." />
        
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Habitat Notes"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <MultiAutoCompleteTextView
            android:id="@+id/bigtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="Filler text filler text filler text filler text.  Filler text filler text filler text filler text.  Filler text filler text filler text filler text." />
        
        <RelativeLayout android:id="@+id/relativeView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <Button
            android:id="@+id/button5"
            android:layout_width="150dp"
            android:layout_alignParentLeft="true"
            android:layout_height="40dp"
            android:text="Save" />
            
            <Button
            android:id="@+id/button6"
            android:layout_width="150dp"
            android:layout_alignParentRight="true"
            android:layout_height="40dp"
            android:text="Cancel" />
        
        </RelativeLayout>
    </LinearLayout>

</ScrollView>